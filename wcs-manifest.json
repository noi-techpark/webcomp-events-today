    "image": "wcs-logo.png",
    "searchTags": [],
    "dist": {
        "basePath": "dist",
        "files": ["events-today.min.js"],
        "scripts": []
    },
    "configuration": {
        "tagName": "events-today",
        "options": [{
                "key": "event-location",
                "type": "text",
                "label": "Location of the events: NOI, EC",
                "required": true,
                "options": {
                    "default": "NOI"
                }
            },
            {
                "key": "room",
                "type": "text",
                "label": "Room: e.g. Seminar 1, NOISE, Chapel",
                "required": false,
                "options": {
                    "default": ""
                }
            },
            {
                "key": "image-gallery-url",
                "type": "text",
                "label": "Gallery image s3 bucket URL",
                "required": false,
                "options": {
                    "default": "https://s3.eu-west-1.amazonaws.com/it.bz.noi.today.eurac.gallery/0.png"
                }
            },
            {
                "key": "image-gallery-interval",
                "type": "number",
                "label": "Gallery interval in seconds",
                "required": false,
                "options": {
                    "default": 60
                }
            },
            {
                "key": "font-url",
                "type": "text",
                "label": "URL to a valid font css file",
                "required": false,
                "options": {
                    "default": "https://fonts.testingmachine.eu/source-sans-pro/style.css"
                }
            },
            {
                "key": "font-name",
                "type": "text",
                "label": "Name of the font loaded from the font URL",
                "required": false,
                "options": {
                    "default": "Source Sans Pro"
                }
            }
        ]
    }
}